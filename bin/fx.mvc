#
set -xe

jdk=${JAVA_HOME:-/opt/jdk13}
jfx=${JAVAFX_HOME:-/opt/jfx13}

rm -fr build
mkdir -p build

$jdk/bin/javac \
  -d build \
  --module-path $jfx/lib --add-modules javafx.controls \
  $(find src/fx.mvc -name '*.java')

rm -f dist/fx.mvc.jar
mkdir -p dist

$jdk/bin/jar cvf \
  dist/fx.mvc.jar -C build .

